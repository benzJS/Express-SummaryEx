                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">Orders</h3>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <label class="au-checkbox">
                                                        <input type="checkbox">
                                                        <span class="au-checkmark"></span>
                                                    </label>
                                                </th>
                                                <th>Thông tin khách hàng</th>
                                                <th>Chi tiết đơn hàng</th>
                                                <th>Trạng thái</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="data-table">
                                            <% for(order of locals.orders) { %>
                                            <tr class="tr-shadow">
                                                <td>
                                                    <label class="au-checkbox">
                                                        <input type="checkbox">
                                                        <span class="au-checkmark"></span>
                                                    </label>
                                                </td>
                                                <td>
                                                    <span
                                                        class="block-email" 
                                                        data-toggle="popover" 
                                                        data-original-title="<%= order.user.fullname %> (<%= order.user.phone %>)"
                                                        data-trigger="focus"
                                                        data-content="<%= order.user.address %>"
                                                        tabindex="0"
                                                        data-placement="top"
                                                        style="cursor: pointer; background-color: #007bff; color: white">
                                                    Client
                                                    </span>
                                                </td>
                                                <td>
                                                    <span 
                                                        class="block-email"
                                                        data-toggle="modal" data-target="#<%= order.id %>"
                                                        style="cursor: pointer;">Details</span>
                                                </td>
                                                <td class="desc"><%= order.state %></td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Xem ảnh và chỉnh sửa" id="<%= order.id %>-btn">
                                                            <i class="zmdi zmdi-edit"></i>
                                                            
                                                        </button>
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Delete" onclick="removeOne('<%= order.id %>')">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                
                                            </tr>
                                            <tr class="spacer"></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                    </div>
                </div>
