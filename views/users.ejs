<% include dashboard-header %>
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">Danh sách khách hàng</h3>
                                <div class="table-data__tool">
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <label class="au-checkbox">
                                                        <input type="checkbox">
                                                        <span class="au-checkmark"></span>
                                                    </label>
                                                </th>
                                                <th>Email</th>
                                                <th>Thông tin chi tiết</th>
                                                <th>Đơn hàng đã mua</th>
                                                <th>Ngày tạo</th>
                                            </tr>
                                        </thead>
                                        <tbody id="data-table">
                                            <% for(user of locals.users) { %>
                                            <tr class="tr-shadow">
                                                <td>
                                                    <label class="au-checkbox">
                                                        <input type="checkbox">
                                                        <span class="au-checkmark"></span>
                                                    </label>
                                                </td>
                                                <td>
                                                    <%= user.email %>
                                                </td>
                                                <td>
                                                    <span
                                                        class="block-email" 
                                                        data-toggle="popover" 
                                                        data-original-title="<%= user.fullname %> (<%= user.phone %>)"
                                                        data-trigger="focus"
                                                        data-content="<%= user.address %>"
                                                        tabindex="0"
                                                        data-placement="top"
                                                        style="cursor: pointer; background-color: #007bff; color: white">
                                                    Click để xem
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/dashboard/orders?state=1&user=<%= user._id %>">
                                                        <span 
                                                            class="block-email"
                                                            style="cursor: pointer; background-color: #856404; color: white">
                                                        Số lượng: <%= user.orders %> 
                                                        </span>
                                                    </a>
                                                </td>
                                                <td>
                                                    24/03/2019
                                                </td>
                                                
                                            </tr>
                                            <tr class="spacer"></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS-->
    <script src="/vendor/slick/slick.min.js"></script>
    <script src="/vendor/wow/wow.min.js"></script>
    <script src="/vendor/animsition/animsition.min.js"></script>
    <script src="/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <!-- <script src="/vendor/chartjs/Chart.bundle.min.js"></script> -->
    <script src="/vendor/select2/select2.min.js">
    </script>
    <script src="/js/dropzone.js"></script>

    <!-- Main JS-->
    <script src="/js/main.js"></script>
    <script>
        $("[data-toggle=popover]").popover();
    </script>
    <% include dashboard-footer %>
</body>

</html>
<!-- end document-->
